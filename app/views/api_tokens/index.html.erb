<div class="container">
  <div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8">

      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4>Administrar token</h4>
        </div>

        <div class="panel-body">
          <div class="form-group">
            <%= label_tag :title, 'Token generado:' %><br/>
            <%= text_field_tag :token, @token, onfocus: 'this.select();' %>
          </div>
          
          <%= link_to 'Eliminar Token', {controller: 'api_tokens', action: 'destroy', id: 1}, 
                      :confirm => 'Are you sure?', method: :delete, class: 'btn btn-danger' %>
        </div>

      </div>

    </div>

    <div class="col-md-2"></div>

  </div>
</div>