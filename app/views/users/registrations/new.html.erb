<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4>Registrarse como Cliente</h4>
        </div>
        <div class="panel-body devise-panel">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'}) do |f| %>
              <%= show_messages %>

              <div class="form-group">
                <%= f.label 'Nombre' %><br />
                <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Nombre' %>
              </div>

              <div class="form-group">
                <%= f.label 'Apellido' %><br />
                <%= f.text_field :last_name, class: 'form-control', placeholder: 'Apellido' %>
              </div>

              <div class="form-group">
                <%= f.label 'Email' %><br />
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
              </div>

              <div class="form-group">
                <%= f.label 'Contrase単a' %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> caracteres al menos)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Contrase単a' %>
              </div>

              <div class="form-group">
                <%= f.label 'Confirmar contrase単a' %><br />
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirmar contrase単a' %>
              </div>

              <div class="actions">
                <%= f.submit 'Registrarse', class: 'btn btn-primary' %>
              </div>

          <% end %>
        </div>
      </div>
      <%= render 'users/shared/links' %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>