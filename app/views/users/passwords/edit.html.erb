<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <%= flash_messages %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4>Cambia tu contraseña</h4>
        </div>
        <div class="panel-body devise-panel">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%#= devise_error_messages! %>
              <%= render 'shared/error_messages', model: resource %>

              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, 'Nueva contraseña' %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> caracteres al menos)</em>
                <% end %><br />
                <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'Contraseña' %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, 'Confirmar contraseña' %><br />
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirmar contraseña' %>
              </div>

              <div class="actions">
                <%= f.submit 'Cambiar Contraseña', class: 'btn btn-primary' %>
              </div>
          <% end %>
        </div>
      </div>
      <%= render 'users/shared/links' %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>