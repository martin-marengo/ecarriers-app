<div class="container-fluid">

  <div class="row">

    <div class="col-md-3"></div>
    
    <div class="col-md-6">
      <div  class="page-header custom-page-header">
        <%= flash_messages %>
        <h2>Destinos más demandados</h2>
      </div>
    </div>

    <div class="col-md-3"></div>

  </div>

  <div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for(:date, url: most_requested_destinations_carrier_statistics_path, method: :get) do |f| %>
              <div class="form-group">
                <%= label_tag 'Desde:' %>
                <%= text_field_tag :from_date, @from_date, class: 'datepicker datepicker-without-limit' %>
              </div>
              <div class="form-group">
                <%= label_tag 'Hasta:' %>
                <%= text_field_tag :to_date, @to_date, class: 'datepicker datepicker-without-limit' %>
              </div>

              <div class="actions">
                <%= f.submit 'Filtrar', class: 'btn btn-primary' %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        
      </div>
    </div>

    <div class="col-md-3"></div>
  </div>

  <div class="row">

    <div class="col-md-3"></div>

    <div class="col-md-6">

      <table class="table table-striped only-header-table">
        <thead>
        <tr>
          <th width="70%">Destino</th>
          <th width="30%">Cantidad</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>

      <% if @data.blank? %>
          <div id="no-results">
            <h2>
              <small>No hay datos para mostrar</small>
            </h2>
          </div>
      <% end %>

      <div id="data">
        <div class="<%= cycle('even', 'odd') %>">
        <table class="table table-borderless">
          <tbody>
          <% @data.each do |destination| %>
            <tr>
              <td width="30%">
                <p><strong><%= destination.place_name %></strong></p>
              </td>
  
              <%# Orígen %>
              <td width="17.5%">
                <p><%= destination.number %></p>
              </td>
  
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      </div>

    </div>

    <div class="col-md-3"></div>

  </div>

</div>